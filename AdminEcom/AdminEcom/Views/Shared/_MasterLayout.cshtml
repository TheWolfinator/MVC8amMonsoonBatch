        <div class="page-sidebar">
            <!-- START X-NAVIGATION -->
            <ul class="x-navigation">
                <li class="xn-logo">
                    <a href="index.html" class="img-circle" style="border:thin"></a>
                    <a href="#" class="x-navigation-control"></a>
                </li>
                <li class="xn-profile">
                  <center><span style="color:wheat">Hi! Admin</span></center> 
                  
                </li>
                 
                <li class="xn-openable">
                    <a href="#"><span class="glyphicon glyphicon-tasks"></span> <span class="xn-text">Categories</span></a>
                    <ul>
                        <li><a href="~/Categories/Index"><i class="fa fa-eye"></i>View Categories</a></li>
                        <li><a href="~/Categories/Create"><span class="glyphicon glyphicon-plus-sign"></span>Add Category</a></li>
                        

                    </ul>
                </li>
                <li class="xn-openable">
                    <a href="#"><span class="glyphicon glyphicon-book"></span> <span class="xn-text">Products</span></a>
