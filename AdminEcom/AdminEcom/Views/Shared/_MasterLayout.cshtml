                    </ul>
                </li>
                <li class="xn-openable">
                    <a href="#"><span class="glyphicon glyphicon-file"></span> <span class="xn-text">Invoices</span></a>
                    <ul>
                        <li><a href="~/Invoice/ViewInvoice"><i class="fa fa-eye"></i><span class="xn-text" style="padding:10px;">View Invoices</span></a></li>
                    </ul>
                </li>

            </ul>
            <!-- END X-NAVIGATION -->
        </div>
        <!-- END PAGE SIDEBAR -->
        <!-- PAGE CONTENT -->
        <div class="page-content">

            <!-- START X-NAVIGATION VERTICAL -->
