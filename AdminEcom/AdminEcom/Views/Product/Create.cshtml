@model AdminEcom.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Create</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Product</legend>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.ProductName)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductName)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.Quantity)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Quantity)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.Price)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Price)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.ImageId)
                </div>
                <div class="col-md-10">

                    @*@Html.TextBox("file", "", new { type = "file" })
                        <br />

                        <input type="submit" value="Upload" onclick="UploadFile()" />

                        @ViewBag.Message
                    *@


                    @Html.DropDownListFor(model => model.ImageId, @Model._ImageListNew, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ImageId)
                </div>

                <div class="col-md-2">
                    <label>Category List</label>
                </div>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CategoryId, @Model._CategoryListNew, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId)
                </div>



                <div style="margin-top:20px;margin-bottom:20px;" class="col-md-10">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
