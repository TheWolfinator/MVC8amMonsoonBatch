@model AdminEcom.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Edit Category</legend>

                @Html.HiddenFor(model => model.CategoryId)

                <div class="col-md-2">
                    @Html.LabelFor(model => model.CategoryName)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CategoryName, null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryName)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.CategoryDescription)
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.CategoryDescription, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryDescription)
                </div>

                @* <div class="editor-label">
                        @Html.LabelFor(model => model.CreationDate)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.CreationDate)
                        @Html.ValidationMessageFor(model => model.CreationDate)
                    </div>*@

                @* <div class="editor-label">
                        @Html.LabelFor(model => model.UpdationDate)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.UpdationDate)
                        @Html.ValidationMessageFor(model => model.UpdationDate)
                    </div>*@

                <div class="col-md-2">
                    <Label>Status</Label>
                </div>
                <div class="col-md-10">
                    @* @Html.EditorFor(model => model.CategoryActive)*@
                    @Html.DropDownListFor(model => model.CategoryActive, new List<SelectListItem> { new SelectListItem { Text = "Active", Value = "True" }, new SelectListItem { Text = "Dactive", Value = "False" } }, null, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.CategoryActive)
                </div>

                <div style="margin-top:20px;margin-bottom:20px;" class="col-md-10">
                    <input type="submit" value="Update" class="btn btn-info" />
                </div>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <div class="col-md-4"></div>

    </div>
</div>
